{% extends 'base.html.twig' %}

{% block title %} {{pin.title}} {% endblock %}

{% block body %}
    
   
    
        <article>
            <h1>{{pin.title}}</a></h1>
            <p>{{pin.description }}</p>
        </article>
         <a href ="{{path ('app_home')}}" class="btn btn-primary">Go Back</a>
         <a href ="#" onclick="event.preventDefault(); confirm('Are you sure ') && document.getElementById('js-pin-delete-form').submit(); " class="btn btn-primary">Delete</a>
         <a href ="{{ path('app_pin_edit' , {'id': pin.id }) }}" class="btn btn-primary">Edit </a>
        
        
        
        <form id="js-pin-delete-form" action="{{ path('app_pin_delete' , {'id': pin.id }) }}" method="post" style="display:none;">
            <input type="hidden" name="_method" value="DELETE">
        </form>
{% endblock %}
