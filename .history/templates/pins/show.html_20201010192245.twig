{% extends 'base.html.twig' %}

{% block title %} {{pin.title}} {% endblock %}

{% block body %}
    <div class="row>"
        <div class="col-md-6 mx-auto ">
    
      
        <article class=" pin rounded shadow center">
                  <div class="mw-100 overflow-hidden mt-5">
                      <a href="{{path('app_pin_show', {id:pin.id})}}">  
                      <img src="{{ (pin.imageName ? vich_uploader_asset(pin,'imageFile') : asset('build/images/placeholder.jpg')) | imagine_filter('images_medium')}}" 
                      class=" rounded-top"  alt="{{pin.title}}"/>
                      </a>
                    </div> 
          
                    <h1 class="h5 pt-2git pl-3"><a href="{{ path('app_pin_show', {id:pin.id}) }}" class="text-secondary text-decration-none">{{pin.title}}</a></h1>
                    <p class="pl-3 pb-3">
                    <small>submitted by [OWNER FULL NAME]{{pin.createdAt | ago }}</small></p>
                    <p class="pl-3">{{ pin.description}}</p>
        </article>
         
       
       
        
         <a href ="{{path ('app_home')}}" class="btn btn-primary">Go Back</a>
         <a href ="#" onclick="event.preventDefault(); confirm('Are you sure ') && document.getElementById('js-pin-delete-form').submit(); " class="btn btn-primary">Delete</a>
         <a href ="{{ path('app_pin_edit' , {'id': pin.id }) }}" class="btn btn-primary">Edit </a>
        
        
        <form id="js-pin-delete-form" action="{{ path('app_pin_delete' , {'id': pin.id }) }}" method="post" style="display:none;">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" neme="csrf_token" value="{{ csrf_token('pins.deletion_' ~ pin.id)}}"
        </form>
         </div>
         </div>

{% endblock %}
